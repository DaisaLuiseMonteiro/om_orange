                        "type": "integer",
                        "format": "int64"
                    },
                    "nom": {
                        "type": "string"
                    },
                    "prenom": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "telephone": {
                        "type": "string"
                    },
                    "marchand_id": {
                        "type": "integer",
                        "format": "int64"
